pipeline {
    agent any
    stages {
        stage('Pre-Build and Build') {
            parallel {
                stage('Pre-Build') {
                    steps {
                        echo "Pre-Building is started"
                        sh 'sleep 5'
                    }
                }
                stage('Build') {
                    steps {
                        echo "Building is started"
                        sh 'sleep 5'
                    }
                }
            }
        }
        stage('Pre-Test and Post-Test') {
            parallel {
                stage('Pre-Test') {
                    steps {
                        echo "Pre-Testing is started"
                        sh 'sleep 5'
                    }
                }
                stage('Post-Test') {
                    steps {
                        echo "Testing is started"
                        sh 'sleep 5'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying is started"
                sh 'sleep 5'
            }
        }
    }
}
