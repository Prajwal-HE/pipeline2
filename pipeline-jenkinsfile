pipeline{
  agent any;
    stages{
    parallel{
      stage('Pre-Build'){
        steps {
            echo "Pre-Building is started"
            sh 'sleep 5'
            }
          }
          stage('Build'){
                  steps {
                      echo "Building is started"
                      sh 'sleep 5'
                      }
                    }
                  }
          parallel{
              stage('Pre-Test'){
                steps{
                  echo "Pre-Testing is started"
                  sh 'sleep 5'
                  }
                 }
                   stage('Post-Test'){
                steps{
                  echo "Testing is started"
                  sh 'sleep 5'
                  }
                 }
                }
              
                  stage('Deploy'){
                  steps {
                  echo "Deplying is started"
                  sh 'sleep 5'
                  }
              }
          }
        }
      }

